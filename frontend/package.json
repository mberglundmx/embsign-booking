{
  "name": "embsign-booking-frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "test": "vitest",
    "test:coverage": "vitest run --dir tests --coverage",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint --fix src/ tests/",
    "format:check": "prettier --check src/ tests/ *.js *.config.js",
    "format": "prettier --write src/ tests/ *.js *.config.js"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.55.0",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.19",
    "vitest": "^2.1.9"
  }
}
